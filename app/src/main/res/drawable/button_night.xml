<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#494A4C" android:endColor="#494A4C" android:angle="90" />
            <corners android:radius="6dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <gradient android:startColor="#1D1F21" android:endColor="#1D1F21" android:angle="90" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#1D1F21" android:endColor="#1D1F21" android:angle="270" />
            <corners android:radius="6dp" />
        </shape>
    </item>
</selector>