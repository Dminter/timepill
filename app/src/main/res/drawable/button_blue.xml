<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="90" android:endColor="#2DBD60" android:startColor="#2DBD60" />
            <corners android:radius="6dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <gradient android:angle="90" android:endColor="#247D42" android:startColor="#247D42" />
            <corners android:radius="6dp" />
        </shape>
    </item>

</selector>