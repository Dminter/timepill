<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="90" android:endColor="#CACACA" android:startColor="#CACACA" />
            <corners android:radius="6dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <gradient android:angle="90" android:endColor="#AAAAAB" android:startColor="#AAAAAB" />
            <corners android:radius="6dp" />
        </shape>
    </item>

</selector>